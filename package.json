{
    "name": "render-apib-html",
    "version": "0.0.1",
    "description": "Serverless rendering of api blueprint files as styled html",
    "author": "iamogbz",
    "repository": {
        "type": "git",
        "url": "https://github.com/iamogbz/render-apib-html"
    },
    "bugs": {
        "url": "https://github.com/iamogbz/render-apib-html/issues"
    },
    "homepage": "https://github.com/iamogbz/render-apib-html#readme",
    "license": "GPL-3.0",
    "keywords": [
        "apib",
        "html",
        "render",
        "serverless",
        "cloudfront"
    ],
    "engines": {
        "node": ">=8",
        "npm": ">=6"
    },
    "scripts": {
        "lint": "eslint . --ext .js,.ts",
        "build": "webpack --mode=production",
        "build-watch": "webpack --mode=development --watch",
        "test": "jest",
        "coveralls": "cat ./artifacts/coverage/lcov.info | coveralls",
        "typecheck": "tsc --noEmit",
        "commit": "git-cz",
        "release": "semantic-release"
    },
    "release": {
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            [
                "@semantic-release/exec",
                {
                    "verifyConditionsCmd": "make package",
                    "verifyReleaseCmd": "[ ! -z ${nextRelease.version} ]",
                    "prepareCmd": "make test-local",
                    "publishCmd": "make deploy"
                }
            ],
            "@semantic-release/github"
        ]
    },
    "jest": {
        "preset": "ts-jest",
        "moduleDirectories": [
            "./src",
            "./tests",
            "./node_modules"
        ],
        "testPathIgnorePatterns": [
            "./artifacts/",
            "./node_modules/"
        ],
        "coverageDirectory": "./artifacts/coverage"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "lint-staged": {
        "*.{js,ts}": [
            "npm run lint",
            "npm test -- --bail --findRelatedTests"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "dependencies": {
        "aglio": "^2.3.0",
        "aglio-theme-onlicar-lambda": "^1.7.0",
        "shell-quote": "^1.7.2"
    },
    "devDependencies": {
        "@babel/cli": "^7.10.4",
        "@babel/core": "^7.10.4",
        "@babel/preset-typescript": "^7.10.4",
        "@commitlint/cli": "^9.0.1",
        "@commitlint/config-conventional": "^9.0.1",
        "@commitlint/travis-cli": "^9.0.1",
        "@semantic-release/changelog": "^5.0.1",
        "@semantic-release/exec": "^5.0.0",
        "@semantic-release/git": "^9.0.0",
        "@types/aws-lambda": "^8.10.58",
        "@types/chrome": "0.0.119",
        "@types/copy-webpack-plugin": "^6.0.0",
        "@types/jest": "^26.0.4",
        "@types/node": "^14.0.20",
        "@types/shell-quote": "^1.7.0",
        "@types/source-map": "^0.5.7",
        "@types/webpack": "^4.41.21",
        "@typescript-eslint/eslint-plugin": "^2.34.0",
        "@typescript-eslint/parser": "^2.34.0",
        "acorn": "^7.3.1",
        "aws-lambda": "^1.0.6",
        "babel-loader": "^8.1.0",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "commitizen": "^4.1.2",
        "copy-webpack-plugin": "^6.0.3",
        "coveralls": "^3.1.0",
        "cz-conventional-changelog": "^3.2.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.2.5",
        "jest": "^25.5.4",
        "lint-staged": "^10.2.11",
        "prettier": "^2.0.5",
        "prettier-eslint": "^11.0.0",
        "rxjs": "^6.6.0",
        "semantic-release": "^17.1.1",
        "ts-jest": "^25.5.1",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.6",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.12"
    }
}
