{
    "name": "render-apib-html",
    "version": "0.0.1",
    "description": "Serverless rendering of api blueprint files as styled html",
    "author": "iamogbz",
    "repository": {
        "type": "git",
        "url": "https://github.com/iamogbz/render-apib-html"
    },
    "bugs": {
        "url": "https://github.com/iamogbz/render-apib-html/issues"
    },
    "homepage": "https://github.com/iamogbz/render-apib-html#readme",
    "license": "GPL-3.0",
    "keywords": [
        "apib",
        "html",
        "render",
        "serverless",
        "cloudfront"
    ],
    "engines": {
        "node": ">=8",
        "npm": ">=6"
    },
    "scripts": {
        "lint": "eslint . --ext .js,.ts",
        "build": "webpack --mode=production",
        "build-watch": "webpack --mode=development --watch",
        "test": "jest",
        "coveralls": "cat ./artifacts/coverage/lcov.info | coveralls",
        "typecheck": "tsc --noEmit",
        "commit": "git-cz",
        "release": "semantic-release"
    },
    "release": {
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            [
                "@semantic-release/exec",
                {
                    "verifyConditionsCmd": "make package",
                    "verifyReleaseCmd": "[ ! -z ${nextRelease.version} ]",
                    "prepareCmd": "make test-local",
                    "publishCmd": "make deploy"
                }
            ],
            "@semantic-release/github"
        ]
    },
    "jest": {
        "preset": "ts-jest",
        "moduleDirectories": [
            "./src",
            "./tests",
            "./node_modules"
        ],
        "testPathIgnorePatterns": [
            "./artifacts/",
            "./node_modules/"
        ],
        "coverageDirectory": "./artifacts/coverage"
    },
    "commitlint": {
        "rules": {
            "header-max-length": [
                0,
                "always",
                0
            ]
        },
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "lint-staged": {
        "*.{js,ts}": [
            "npm run lint",
            "npm test -- --bail --findRelatedTests"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "dependencies": {
        "aglio": "^2.3.0",
        "aglio-theme-onlicar-lambda": "^1.7.0",
        "shell-quote": "^1.8.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.22.5",
        "@babel/core": "^7.22.5",
        "@babel/preset-typescript": "^7.22.5",
        "@commitlint/cli": "^17.6.6",
        "@commitlint/config-conventional": "^17.6.6",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/exec": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@types/aws-lambda": "^8.10.119",
        "@types/chrome": "0.0.239",
        "@types/jest": "^27.5.0",
        "@types/node": "^20.3.2",
        "@types/shell-quote": "^1.7.1",
        "@types/webpack": "^5.28.1",
        "@typescript-eslint/eslint-plugin": "^5.60.1",
        "@typescript-eslint/parser": "^5.60.1",
        "acorn": "^8.9.0",
        "aws-lambda": "^1.0.7",
        "babel-loader": "^9.1.2",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "commitizen": "^4.2.6",
        "copy-webpack-plugin": "^11.0.0",
        "coveralls": "^3.1.1",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.43.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "^8.0.2",
        "jest": "^27.5.1",
        "lint-staged": "^13.2.3",
        "prettier": "^2.8.8",
        "prettier-eslint": "^15.0.1",
        "rxjs": "^7.8.1",
        "semantic-release": "^21.0.5",
        "ts-jest": "^27.1.4",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.3",
        "webpack": "^5.88.1",
        "webpack-cli": "^5.1.4"
    }
}
