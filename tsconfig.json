{
    "compilerOptions": {
        "baseUrl": "./src",
        "moduleResolution": "node",
        "outDir": "./built",
        "resolveJsonModule": true,
        "target": "es6",
        "allowSyntheticDefaultImports": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true
    },
    "exclude": ["node_modules"]
}
